@model IEnumerable<DoAnAnimals.Models.Region>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Region_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Climate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Region_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Climate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Region_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Region_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Region_ID })
        </td>
    </tr>
}

</table>
